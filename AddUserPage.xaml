<?xml version = "1.0" encoding = "UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:F"
             x:Class="F.AddUserPage">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Enter User Details" FontSize="20" FontAttributes="Bold"/>
        <Entry x:Name="NameEntry" Placeholder="Enter Name"/>
        <Entry x:Name="EmailEntry" Placeholder="Enter Email" Keyboard="Email"/>
        <Button BackgroundColor="Green" TextColor="White" Text="Save User" Clicked="OnSaveUserClicked"/>
        <Button BackgroundColor="Gray" Text="Back" Clicked="OnBackClicked"/>

    </VerticalStackLayout>
</ContentPage>