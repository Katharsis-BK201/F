<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:F.ViewModels"
             x:Class="F.MainPage">

    <ContentPage.BindingContext>
        <vm:TaskViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="20" Spacing = "10">
        <Label Text="Enter Person Details" FontSize="20" HorizontalOptions="Center" />

        <Entry Placeholder="Task Name" Text="{Binding TaskName}" />
        <Entry Placeholder="Description" Keyboard="Numeric" Text="{Binding Description}" />

        <Button Text="Add Person" Command="{Binding AddTaskCommand}" />
        
        <Label Text="List of Persons Added" 
           FontSize="18" 
           FontAttributes="Bold" 
           HorizontalOptions="Center" 
           Margin="10,20,10,5" />
        
        <ListView ItemsSource="{Binding Tasks}" SelectedItem="{Binding SelectedTask, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding TaskName}" Detail="{Binding Description}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
