<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="F.Views.TaskDetailPage">

     
          
    <StackLayout Padding="20">
        <Label Text="Edit Task" FontSize="Large"/>

        <Entry Text="{Binding Task.TaskName}" Placeholder="Task Name"/>
        <Entry Text="{Binding Task.Description}" Placeholder="Description"/>

        <Button Text="Save" Command="{Binding SaveTaskCommand}"/>
        <Button Text="Delete" BackgroundColor="Red" TextColor="White" Command="{Binding DeleteTaskCommand}"/>
    </StackLayout>
</ContentPage>